---
import UiImage from "@/components/ui/zImage.astro";

interface Props {
    imagePath: string;
    memberName: string;
    title: string;
    bio: string;
}

const { imagePath, memberName, title, bio } = Astro.props;
---
<div>
    <div class="group relative mb-8 p-4">
        <div
                class="absolute inset-0 skew-y-2 rounded-lg bg-blue-100 transition duration-150 ease-out group-hover:-rotate-2 dark:bg-blue-900 dark:bg-opacity-50"
        ></div>
        <UiImage
                imagePath="assets/team"
                imageName=`${imagePath}`
                styles="relative rounded-lg shadow"
                altText={memberName}
                height="700"
                width="480"
            />
    </div>
    <h4 class="mb-0.5 text-2xl font-bold dark:text-gray-300 text-sky-950">{memberName}</h4>
    <p class="mb-3 font-semibold text-base text-gray-600 dark:text-gray-400">
        {title}
    </p>
    <p class="leading-relaxed text-sm text-gray-600 dark:text-gray-400">
        {bio}
    </p>
</div>