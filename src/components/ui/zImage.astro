---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
interface Props {
    imagePath: string;
    imageName: string;
    styles: string;
    altText: string;
    height: string;
    width: string;
}

const { imagePath, imageName, styles, altText, height, width } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
    "./public/assets/*.{jpeg,jpg,png,gif}",
);
if (!images[imageName])
    throw new Error(
        `"${imageName}" does not exist in glob: "${imageName}/*.{jpeg,jpg,png,gif}"`,
    );
---

<div>
    <Image
        src={images[imageName]()}
        alt={altText}
        width={Number(width)}
        height={Number(height)}
        class={styles}
        loading="lazy"
    />
</div>
