---
import type { Product } from '@/types/types';
import MainSection from '@/components/products/sections/MainSection.astro';
import FeatureSection from './sections/FeatureSection.astro';
import CoreImage from '@/components/products/CoreImage.astro';
import InfoImage from '@/components/products/InfoImage.astro';
import TagImage from './TagImage.astro';
import StarImage from './StarImage.astro';
import QuoteImage from './QuoteImage.astro';

const { product } = Astro.props;

const {
  product_title,
  features_title,
  features_description,
  demo_link,
  features,
  summary_features,
  price,
  full_description,
  short_description,
  image,
  tags,
  link,
  moreInfo,
}: Product = product!;
---

<section class='dark:bg-gray-900'>
  <MainSection
    productTitle={product_title}
    fullDescription={full_description}
    shortDescription={short_description}
    tags={tags}
    image={image}
  />
  <FeatureSection
    featuresContent={{
      title: features_title,
      description: features_description,
      demoLink: demo_link,
    }}
    features={features}
    summaryFeatures={summary_features}
  />

  <section
    class='max-w-[60%] mx-auto flex justify-center gap-10 pt-32 pb-8 md:pt-40 lg:px-8 lg:pt-40 lg:pb-12 lg:max-w-[90%] flex-wrap max-lg:max-w-[80%]'
  >
    <img
      src='/public/assets/products/org_directory/slice6.png'
      alt=''
      class='object-contain w-1/3 max-lg:w-full'
    />
    <div class='w-1/3 flex flex-col gap-4 max-lg:w-full'>
      <QuoteImage />
      <p class='text-gray-400 text-sm'>
        Lorem, ipsum dolor sit amet consectetur adipisicing elit. Sequi aliquam
        minima et, libero laborum nam inventore possimus, fugiat odit
        repellendus ea omnis cumque debitis neque est! Ut tempore cum minus!
      </p>
      <a
        href='#'
        class='self-start py-2 px-4 bg-sky-700 text-white font-semibold rounded-lg hover:bg-sky-800 transition-all cursor-pointer'
        >Download</a
      >
    </div>
  </section>

  <section class='py-20 max-w-[70%] mx-auto max-lg:max-w-[80%]'>
    <div
      class='w-full py-8 px-16 flex gap-10 justify-center items-center rounded-2xl border-4 border-[#111826] max-lg:flex-col max-lg:px-4 dark:border-white'
    >
      <div class='flex flex-col gap-2 items-center'>
        <TagImage />
        <span class='dark:text-white'>Price:</span>
        <span class='text-gray-600 text-xs dark:text-white'>Free</span>
      </div>
      <div
        class='bg-black border-[3px] border-black h-20 rounded-full max-lg:w-1/2 max-lg:h-0 dark:border-white'
      >
      </div>

      <div class='flex flex-col justify-center items-center gap-2'>
        <StarImage />

        <span class='dark:text-white'>Rating:</span>
        <div class='flex gap-2 items-center'>
          <img
            src='/public/assets/products/org_directory/slice12.png'
            class='w-20 object-contain'
          />
          <span class='text-xs dark:text-white'>/4.9</span>
        </div>
      </div>
      <div
        class='bg-black border-[3px] border-black h-20 rounded-full max-lg:w-1/2 max-lg:h-0 dark:border-white'
      >
      </div>
      <div class='flex flex-col justify-center items-center gap-2'>
        <CoreImage />
        <span class='dark:text-white'>System requirements:</span>
        <span class='text-xs text-gray-600 dark:text-white'
          >macOS 10.13 or higher, 210MB</span
        >
      </div>
      <div
        class='bg-black border-[3px] border-black h-20 rounded-full max-lg:w-1/2 max-lg:h-0 dark:border-white'
      >
      </div>
      <div class='flex flex-col justify-center items-center gap-2'>
        <InfoImage />
        <span class='dark:text-white'>Latest version:</span>
        <span class='text-gray-600 text-xs dark:text-white'
          >4.5 August 7 2024</span
        >
      </div>
    </div>
  </section>
</section>
