---
const { productTitle,product_title_html, fullDescription, shortDescription, image } = Astro.props;
---

<section
  class='max-w-[90%] mx-auto flex flex-wrap justify-center gap-20 pt-32 pb-8 md:pt-40 lg:pt-40 lg:pb-12'
>
  <img src={image} alt='#' class='object-contain w-1/3 max-lg:w-full' width="100%" height="100%"/>
  <div class='w-1/3 flex flex-col gap-6 max-lg:w-full'>
    <h2 class='font-bold text-2xl dark:text-white'>
      <Fragment set:html=  {product_title_html}/></span>
    </h2>
    
      
      <Fragment set:html=  {shortDescription}/>
    <p class='text-gray-500 '>
      <Fragment set:html=  {fullDescription}/></span>
    </p>
    <a
      href='#'
      class='self-center py-2 px-4 bg-sky-700 text-white font-semibold rounded-lg hover:bg-sky-800 transition-all cursor-pointer z-10'
      >Microsoft Store</a
    >
  </div>
</section>
