---
import TagWrapper from '@/components/ui/tag/TagWrapper.astro';

const { productTitle, fullDescription, shortDescription, tags, image } =
  Astro.props;
---

<section
  class='max-w-[90%] mx-auto pt-32 pb-8 md:pt-40 lg:px-8 lg:pt-40 lg:pb-12 lg:max-w-[80%]'
>
  <div class='flex flex-col gap-12'>
    <div class='flex flex-col lg:flex-row gap-6'>
      <div>
        <!-- <h2 class='text-lime-700 text-3xl font-bold'>{productTitle}</h2> -->
        <h3
          class='font-bold text-xl md:text-2xl lg:text-3xl text-black dark:text-white'
        >
          {shortDescription}
        </h3>
        <TagWrapper>
          {
            tags.map(({ title, color }) => (
              <div class={`text-center ${color} text-sm`}>{title}</div>
            ))
          }
        </TagWrapper>
      </div>

      <div class='text-gray-600 dark:text-gray-400 mt-4'>
        <p>
          {fullDescription}
        </p>
      </div>
    </div>
    <img
      src={image}
      alt='product image'
      width='100%'
      height='auto'
      class='pt-20'
    />
