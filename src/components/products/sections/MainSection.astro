---
import TagWrapper from '@/components/ui/tag/TagWrapper.astro';

const { productTitle, fullDescription, shortDescription, tags, image } =
  Astro.props;
---

<section
  class='max-w-[90%] mx-auto pt-32 pb-8 md:pt-40 lg:px-8 lg:pt-40 lg:pb-12 lg:max-w-[80%]'
>
  <div class='flex flex-col gap-12 relative'>
    <div class='flex flex-col lg:flex-row gap-6 lg:justify-evenly'>
      <div class='lg:w-1/3'>
        <h2 class='text-white text-4xl font-bold'>{productTitle}</h2>

        <TagWrapper>
          {
            tags.map(({ title, color }) => (
              <div class={`text-center ${color} text-sm`}>{title}</div>
            ))
          }
        </TagWrapper>
        <p class='text-white mt-6'>{shortDescription}</p>
      </div>

      <div
        class='text-gray-600 dark:text-gray-400 mt-4 flex flex-col gap-4 lg:w-1/2'
      >
        <h2 class='pb-5 text-2xl text-sky-900 font-bold mb-0'>Overview</h2>
        <p>
          {fullDescription}
        </p>
      </div>
    </div>

    <div
      class='group relative flex-none lg:ml-16 lg:w-1/2 xl:ml-28 mt-20 self-center'
    >
      <div
        class='absolute left-0 top-0 block h-64 w-full scale-105 rounded-xl bg-[#d0ce38] opacity-40 blur-2xl'
      >
      </div>
      <div
        class='absolute bottom-0 left-0 block h-64 w-full scale-105 rounded-xl bg-[#2383b6] opacity-40 blur-2xl'
      >
      </div>
      <img
        class='relative mx-auto rounded-br-3xl rounded-tl-3xl scale-x-[-1]'
        src={image}
        alt='Preview Feature Image'
      />
    </div>
  </div>
</section>
